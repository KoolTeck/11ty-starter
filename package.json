{
  "name": "eleventy-starter",
  "version": "0.0.1",
  "description": "A starting point for Eleventy projects with Tailwind and other goodies.",
  "author": "Matt Waler",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattwaler/eleventy-starter"
  },
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@fullhuman/postcss-purgecss": "https://github.com/mattwaler/postcss-purgecss",
    "@starptech/prettyhtml": "^0.10.0",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.2",
    "del": "^5.1.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "glob": "^7.1.4",
    "postcss": "^7.0.17",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.3",
    "postcss-easy-import": "^3.0.0",
    "remove-blank-lines": "^1.1.1",
    "tailwindcss": "^1.1.2",
    "watch": "^1.0.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7"
  },
  "scripts": {
    "build": "yarn clean; concurrently 'yarn:css' 'yarn:js' && yarn markup",
    "clean": "rm -r _assets _site",
    "deploy": "MODE=production yarn build",
    "css": "postcss styles/main.pcss -o _assets/main.css",
    "dev": "yarn build; concurrently 'yarn:watch:*'",
    "markup": "eleventy",
    "importer": "node importer",
    "js": "webpack --mode=production",
    "watch:css": "watch 'yarn css' styles --interval=1",
    "watch:importer": "watch 'yarn importer' scripts/imports scripts/modules --interval=1",
    "watch:js": "webpack -w --mode=development",
    "watch:markup": "eleventy --serve"
  }
}
