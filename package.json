{
  "name": "eleventy-starter",
  "version": "0.0.1",
  "description": "A starting point for Eleventy projects with Tailwind and other goodies.",
  "author": "Matt Waler",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattwaler/eleventy-starter"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn clean; concurrently 'yarn:css' 'yarn:js' && yarn markup",
    "clean": "rm -rf .cache dist src/_assets",
    "css": "parcel build src/_styles/main.pcss --out-dir src/_assets --out-file main.css --no-source-maps",
    "dev": "yarn clean; concurrently 'yarn:watch:*' --raw",
    "js": "parcel build src/_scripts/main.js --out-dir src/_assets --out-file main.js --no-source-maps",
    "markup": "eleventy --config 11ty.js",
    "watch:css": "parcel watch src/_styles/main.pcss --out-dir src/_assets --out-file main.css",
    "watch:js": "parcel watch src/_scripts/main.js --out-dir src/_assets --out-file main.js",
    "watch:markup": "eleventy --serve --config 11ty.js"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@fullhuman/postcss-purgecss": "https://github.com/mattwaler/postcss-purgecss",
    "@starptech/prettyhtml": "^0.10.0",
    "autoprefixer": "^9.6.1",
    "axios": "^0.19.0",
    "concurrently": "^4.1.2",
    "dotenv": "^8.1.0",
    "eslint": "^6.2.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "parcel-bundler": "^1.12.3",
    "tailwindcss": "^1.1.2",
    "watch": "^1.0.2"
  }
}
